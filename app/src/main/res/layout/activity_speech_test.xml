<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context="com.example.root.maasmark_1.SpeechTest">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:src="@drawable/logoo"


        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/result"
        android:textSize="27sp"

        android:text="Speak the amount in Numeric system.\n For example 100 is One Hundred"
        fontPath="fonts/aleron_light.otf"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="speech"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:background="#14d14a"
        android:text="SPEAK"
        android:id="@+id/button"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:gravity="center"
        android:textSize="35sp"
        android:layout_marginBottom="30dp"
        android:id="@+id/textView"
        android:layout_above="@+id/amount"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:hint="Enter amount in Rupees"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:id="@+id/amount"
        android:layout_above="@+id/submittt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="FIND NEARBY SHOPS"
        android:textColor="#ffffff"
        android:background="#14d14a"
        android:padding="10dp"
        android:id="@+id/submittt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

</RelativeLayout>
